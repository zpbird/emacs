;;-------------------------------------------------------
;;--- init-others.el 其他---
;;-------------------------------------------------------

;; lua-mode
;;---------------------------
(use-package lua-mode
  :defer t
  :mode "\\.lua$"
  :config
  
  )

;; ssh
;;---------------------------
(use-package ssh-el
  :defer t
  ;; :mode ""
  :config
  (add-hook 'ssh-mode-hook
            (lambda ()
              (setq ssh-directory-tracking-mode t)
              (shell-dirtrack-mode t)
              (setq dirtrackp nil)))

  )






;;End===============
(provide 'init-others)
